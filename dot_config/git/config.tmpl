[user]
	email = {{ .email }}
	name = {{ .name }}

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    syntax-theme = Nord

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[init]
    defaultBranch = master

[ghq]
    root = ~/repos
    root = ~/development
